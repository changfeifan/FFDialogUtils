<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充颜色 -->
    <gradient
        android:centerColor="@color/yellow_progress"
        android:endColor="@color/green_progress"
        android:startColor="@color/red_progress" />

    <!-- 线的宽度，颜色灰色 -->
    <stroke
        android:width="1dp"
        android:color="@color/line_gray"></stroke>

    <!-- 矩形的圆角半径 -->
    <corners android:radius="10dp" />

</shape>